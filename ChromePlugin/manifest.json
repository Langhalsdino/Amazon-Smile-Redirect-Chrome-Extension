{
    "name": "Amazon.de smile redirect plugin",
    "description": "This plugin redirects amazon.de to smile.amazon.de",
    "author": "Langhalsdino",
    "version": "0.5",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"]
    },
    "options_page": "options.html",
    "web_accessible_resources": [
        "contentNavBar.css",
        "contentNavBar.html",
        "contentNavBar.js"
    ],
    "permissions": [
        "<all_urls>",
        "tabs",
        "webRequest",
        "webRequestBlocking"
    ]
}
